<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarTextViewStyle">@style/Widget.MaterialComponents.Snackbar.TextView</item>
    </style>
    <style name="Widget.MaterialComponents.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textAppearance">@style/snackbar_style</item>
    </style>
    <style name="snackbar_style">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name ="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>